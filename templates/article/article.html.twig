{% extends "base.html.twig" %}

{% block title %}Page article{% endblock %}

{% block body %}

<div class="container py-4">
<h1>Article</h1>

<div class="row py-4">
  {% for article in articles %}
  <div class="my-3 col-sm">
    <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{article.picture}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{article.title}}</h5>
        <p class="card-text">{{article.content}}</p>
        <em>Crée le : {{article.createdAt | date("d/m/Y")}}</em>
        {% if article.categorie is not empty %}
          {% for category in article.categorie %}
            <p>Catégorie(s) : <span class="badge badge-info bg-info">{{category}}</span></p>
          {% endfor %}
        {% endif %}
      </div>
  </div>
  </div>

{% endfor %}
</div>

</div>


{% endblock %}

